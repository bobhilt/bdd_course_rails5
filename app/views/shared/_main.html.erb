<div class="container"> 
  <div class="row">
    <div class="col-md-12">
      <% flash.each do |key, value| %>
        <div class="text-center alert alert-<%= key == 'notice'? 'success': 'danger' %> alert-dismissible">
          <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <%= value %>
         </div>
      <% end %>          
      <%= yield %> 
    </div>
  </div> 
</div>